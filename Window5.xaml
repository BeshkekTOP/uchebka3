<Window x:Class="Uchebka1.Window5"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Uchebka1"
        mc:Ignorable="d"
        Title="Window5" Height="450" Width="800">
    <Grid>
        <DataGrid x:Name="Inner2GataGrid" SelectionChanged="Inner2GataGrid_SelectionChanged" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding RentalDate}" Header="Дата аренды"/>
                <DataGridTextColumn Binding="{Binding ReturnDate}" Header="Дата сдачи"/>
                <DataGridTextColumn Binding="{Binding TotalCost}" Header="Цена"/>
                <DataGridTextColumn Binding="{Binding Cars.Brand}" Header="Бренд"/>
                <DataGridTextColumn Binding="{Binding Cars.Model}" Header="Модель"/>
                <DataGridTextColumn Binding="{Binding  Cars.Year}" Header="Год"/>
                <DataGridTextColumn Binding="{Binding  Cars.Color}" Header="Цвет"/>
               
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
