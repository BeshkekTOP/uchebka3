        <Button x:Name="DeleteBtn" Content="Удалить" HorizontalAlignment="Center" Margin="0,353,0,0" VerticalAlignment="Top" Height="46" Width="780" Background="#FFEB3B2D" Click="DeleteBtn_Click"/>
        <Button x:Name="NextTable3" Content="NextTable" HorizontalAlignment="Left" Margin="678,0,0,0" VerticalAlignment="Center" Height="40" Width="112" Click="NextTable3_Click" Background="#FFC15CE5"/>
        <Button x:Name="LastTable1" Content="LastTable" HorizontalAlignment="Left" Margin="10,192,0,0" VerticalAlignment="Top" Height="40" Width="112" Click="LastTable1_Click" Background="#FFC15CE5"/>

    </Grid>
</Window>
